// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dog {
  id                 String      @id @default(cuid())
  name               String      @unique
  min_height         Int
  max_height         Int
  min_weight         Int
  max_weight         Int
  min_life_span      Int
  max_life_span      Int
  image              String
  origin             String?
  dogTemperament     Temperament @relation(fields: [dogTemperamentName], references: [name])
  dogTemperamentName String
}

model Temperament {
  name String @unique
  Dog  Dog[]
}

model User {
  id        String @id
  name      String
  favorites String
}
